<html>
  <head>
    <title><%= @title %></title>
    <%= stylesheet_link_tag('html') %>
    <%= stylesheet_link_tag('intro') %>
    <%#= javascript_include_tag(:defaults) %>
    <script type="text/javascript" src="http://www.google.com/jsapi?key=<%= GOOGLE_JS_API_KEY %>"></script>
    <script type="text/javascript">
      google.load("prototype", "1.6.0.3");
      google.load("scriptaculous", "1.8.2");
    </script>
    <meta name="generator" content="<%= APPLICATION_NAME %>" />
    <meta name="robots" content="index, follow" />
    <meta name="GOOGLEBOT" content="index, follow" />
    <meta name="MSSmartTagsPreventParsing" content="yes" />
    <meta http-equiv="expires" content="3600" />
    <meta name="keywords" content="kakuteru, cocktail, lifestreaming, lifestreamer, semantic, life, streaming, semantic-web, integration, dopplr, friendfeed, zemanta, customizable, design, style" />
    <%= yield(:head) %>
  </head>
  
  <body>
    <div class="header">
      <ul class="menu">
        <li><%= link_to('get started', '/signup') %></li>
        <li><%= link_to('login', '/login') %></li>
        <li><%= link_to('about', '/about') %></li>
      </ul>
      <%= link_to('Kakuteru', '/', :class => 'kakuteru') %>
    </div>
    <div class="page <%= params[:action] %>">
      <%= yield %>
    </div>
    <div class="footer">
      <div style="float:right; margin-top: 30px">
        <!-- AddThis Bookmark Button BEGIN -->
        <script type="text/javascript">
          addthis_url    = location.href;   
          addthis_title  = document.title;  
          addthis_pub    = 'dominiek';     
        </script><script type="text/javascript" src="http://s7.addthis.com/js/addthis_widget.php?v=12" ></script>
        <!-- AddThis Bookmark Button END -->
      </div>
      <small>Hosting provided by: </small><br/>
      <%= link_to(image_tag('/images/slicehost.png', :width => 100), 'http://slicehost.com/') %>
    </div>
  </body>
</html>