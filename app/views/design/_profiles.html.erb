<div class="profiles">
  <h3>Me elsewhere</h3>
  <ul>
    <% @stream.services.public.each do |service|
      %>
      <li><%= link_to("#{image_tag(service.icon_url)} #{service.name}", service.profile_url, :rel => 'me') %></li>
    <% end %>
    <li><%= link_to("#{image_tag('google.gif')} Google", "http://google.com/search?q=#{CGI.escape(@stream.author.to_s)}") %></li>
