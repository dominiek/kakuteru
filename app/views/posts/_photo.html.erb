<%= sized_caption(post.caption, read_url(:id => post)) %>
<% if (media = post.medias.first) %>
  <% if @post %>
    <%= image_tag(media.embed_url.gsub(/_m\.jpg$/, '.jpg')) %>
  <% elsif local_assigns[:context] == 'media' %>
    <%= link_to(image_tag(media.big_thumbnail_url), read_url(:id => post)) %>
  <% end %>
<% end %>