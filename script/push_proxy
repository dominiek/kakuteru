#!/bin/bash
DESTINATION_PORT=3000
FORWARDABLE_PORT=3000
TEMPORARY_PORT=2999
SSH_USERNAME=deploy
HOST=development.kakuteru.com
ssh -R 0.0.0.0:$TEMPORARY_PORT:localhost:$FORWARDABLE_PORT $SSH_USERNAME@$HOST ssh -L 0.0.0.0:$DESTINATION_PORT:localhost:$TEMPORARY_PORT $SSH_USERNAME@localhost sleep 360000